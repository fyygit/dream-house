/*基础样式*/
body
  background-color:#efeff4
  font-size: 16px
/*内容样式*/
.title
  //height: 40px
  padding: 5px 60px
  background-color: #fff
  border-bottom: 1px solid #e1e1e1
  //overflow: hidden
  .header_box
    height 26px
    border 2px solid #ea5404
    border-radius 5px
    display flex
    .header
      flex 1
      color #ea5404
      line-height 26px
      text-align center
      border-right 1px solid #ea5404
      position relative
      &:nth-child(3)
        border none
      &.active
        background-color #ea5404
        color #fff
      .numbers
        font-size 12px
        position absolute
        top 2px
        right 50%
        margin-right -24px
//消息样式
.collection_row
  height 134px
  margin 12px
  border 1px solid #e1e1e1
  border-radius 5px
  box-shadow 0 0 2px 1px #e1e1e1
  background-color #fff
  position relative
  display none
  &.active
    display block
  .collection_head
    display block
    margin-top 14px
    padding 0 0 14px 12px
    border-bottom 1px dashed #e1e1e1
  .collection_text
    font-size 12px
    margin 10px 12px
    line-height 18px
  .right_text
    font-size 12px
    color #717171
    float right
    line-height 24px
    margin-right 12px
  .date
    font-size 12px
    color #717171
    position absolute
    right 12px
    top 14px
  .id
    font-size 14px
    color #717171
    padding-left 12px
  .tenant,.agent,.orders,.agency
    width 46px
    height 20px
    text-align center
    line-height 20px
    font-size 10px
    color #fff
    background-color #15b755
    border-radius 3px
    position absolute
    right 12px
    top 14px
  .agent
    background-color #0193e6
  .orders
    background-color #97b715
  .agency
    background-color #ea5404
  .collection_link
    display block
    width 90px
    margin 0 auto
    text-align center
    color #717171
    padding 4px 0
    background-color #efeff4
    font-size 14px
    border 1px solid #e1e1e1
    border-radius 4px

