/*基础样式*/
body
  background-color:#efeff4
  font-size: 16px
.header
  position absolute
  z-index 5
  width 100%
  text-align center
  color #fff
  background url("../../image/banner_img_shadow@2x.png")no-repeat
  background-size 100%
  background-color transparent
  .icon-back
    width 65px
    background transparent url("../../image/nav_icon_down@2x.png")no-repeat left 50px center
    background-size 12px 6px
    line-height 50px
    position absolute
    left 12px
    font-size 14px
  .header_title
    font-size 20px;
    line-height 50px
.search_box
  position absolute
  top 50px
  right 12px
  left 12px
  z-index 5
  .search_input
    height 34px
    line-height 34px
    border-radius 3px
    background-color #f1f1f1
    text-align center
    color #bcbcbc
    .icon_search
      display inline-block
      width 30px
      height 30px
      background url("../../image/banner_icon_search@2x.png")no-repeat center
      background-size 16px
      vertical-align bottom
      margin-bottom 1px
      font-size 12px
    .inp_text
      font-size 14px
.slider_box
  width 100%
  height 280px
  overflow hidden
  .slider_container
    //width 300%
    height 280px
    transition  all .5s
    transform  translateX(0)
    &:after
      content ''
      display block
      visibility hidden
      height 0
      clear both
.slider_block
  float left
  width 375px
  height 280px
  background url("../../image/banner_img1@2x.png")no-repeat center
  background-size 100%
  &:nth-child(2)
    background url("../../image/banner_img1@2x.png")no-repeat center
    background-size 100%
  &:nth-child(3)
    background url("../../image/banner_img1@2x.png")no-repeat center
    background-size 100%
  &:nth-child(4)
    background url("../../image/banner_img1@2x.png")no-repeat center
    background-size 100%
.point_box
  height 16px
  position relative
  top -30px
  z-index 5
  text-align center
  .point_block
    display inline-block
    width 16px
    height 16px
    background url("../../image/banner_icon_point_nor@2x.png")no-repeat center
    background-size 10px
    &.active
      background url("../../image/banner_icon_point_press@2x.png")no-repeat center
      background-size 10px
.query_box
  width 100%
  height 50px
  margin-top 10px
  background-color #fff
  border-bottom 1px solid #e1e1e1
  display flex
  .query_block
    flex 1
    .query_text
      display block
      margin-top 12px
      text-align center
      color #717171
      border-right 1px solid #e1e1e1
      &.active
        color: #ea5404
    .icon
      display block
      height 15px
      background url("../../image/content_icon02_nor@2x.png")no-repeat center
      background-size 10px
      &.active
        background url("../../image/content_icon02_press@2x.png")no-repeat center
        background-size 10px
  .query_price
    width 50px
    height 50px
    background url("../../image/content_icon01_nor@2x.png")no-repeat center
    background-size 20px
    &.active_down
      background url("../../image/content_icon01_down@2x.png")no-repeat center
      background-size 20px
    &.active_up
      background url("../../image/content_icon01_litre@2x.png")no-repeat center
      background-size 20px
/*区域样式*/
.down-box
  color #717171
  height 300px
  overflow scroll
  display none
  .list,.lists
    width 50%
    float left
  .list li,.lists li
    height 46px
    line-height 46px
    padding-left 12px
    list-style none
    &.active
      background-color #fff
  .cont,.more
    width 50%
    float left
    background-color #fff
    display none
    &.active
      display block
  .cont li,.more li
    height 45px
    line-height 45px
    list-style none
    margin-left 12px
    border-bottom 1px solid #e1e1e1
    &.active
      color #ea5404
  /*面积样式*/
  .area
    display block
    height 46px
    text-align center
    line-height 46px
    &.active
      background-color #fff
  .center
    text-align center
    .te
      width 72px
      height 32px
    .btn
      width 58px
      height 32px
      background-color #fff

/*内容样式*/
.house_details
  height 108px
  padding 12px
  background-color #fff
  border-bottom 1px solid #e1e1e1
  position relative
  margin-top 6px
  .house_img
    float left
    display block
    padding-left 158px
    background url("../../image/content_img_list@2x.png")no-repeat
    background-size 140px 104px
    .house_head
      font-size 16px
      margin 6px 0
    .address
      font-size 14px
      color #717171
      margin-bottom 12px
    .link
      display block
      width 48px
      color: #ea5404
      font-size 12px
      padding 4px 10px
      border 1px solid #ea5404
      border-radius 5px
      margin-bottom 6px
    .mun
      color #ea5404
      font-size 12px
      .number
        font-size 16px
    .danw
      font-size 12px
      color #717171
    .right
      display block
      width 28px
      height 26px
      font-size 10px
      background url("../../image/collect_icon_nor@2x.png")no-repeat
      background-size 17px
      position absolute
      right 12px
      top 0
      margin-top 20px
    .rights
      position absolute
      font-size 10px
      color #717171
      right 12px
      bottom 0
      margin-bottom 22px
