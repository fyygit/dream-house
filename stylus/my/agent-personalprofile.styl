/*基础样式*/
body
  background-color:#efeff4
  font-size: 16px
/*内容样式*/
.title
  height: 40px
  padding: 0 12px
  background-color: #fff
  border-bottom: 1px solid #e1e1e1
  text-align: center
  overflow: hidden

.title .nav_back
  display:block
  width: 16px
  height: 16px
  background: url("../../image/nav_back_icon@2x.png")no-repeat
  background-size: 50%
  position absolute
  margin: 12px 0

.title .title_text
  display: block
  margin: 12px 0
  font-size 20px
.head
  height 204px
  line-height 204px
  padding 0 12px
  border-bottom 1px solid #e1e1e1
  background-color #fff
  margin-bottom 12px
  text-align center
  position relative
  .head_img
    display block
    height 80px
    width 80px
    background url("../../image/content_img_user@2x.png")no-repeat
    background-size 62px
    position absolute
    top 12px
    left 50%
    margin-left -30px
  .head_name
    display block
    font-size 20px
    margin-bottom 6px
    padding-top 88px
  .head_text
    font-size 14px
    color #717171
    margin-bottom 12px
  .head_link
    display block
    width 98px
    margin 0 auto
    color: #ea5404
    font-size 12px
    padding 8px 12px
    border 1px solid #ea5404
    border-radius 5px
.personal
  height 266px
  background-color #fff
  border-bottom 1px solid #e1e1e1
  .personal_row
    height 36px
    padding 0 12px
    border-bottom 1px solid #e1e1e1
    position relative
    display flex
    .personal_text
      color #717171
      line-height 36px
      flex 1
    .inp_row
      flex 1
      line-height 36px
  .optional_box
    margin-top 20px
    position flex
    .optional_list
      flex 1
      margin 0 4.1%
      height 68px
      width 25%
      text-align center
      float left
      .optional_text
        display block
        height 68px
        background-color #878787
        border-radius 5px
        margin-bottom 6px